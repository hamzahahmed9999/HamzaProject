            </ul>
            <form class="form-inline my-2 my-lg-0"  method="post" action="/searchProfiles">
                <select data-trigger="" name="searchType" style="border-radius: .25rem;padding: 1%">
                    <option value="Name">Name</option>
                    <option value="Age">Age</option>
                    <option value="City">City</option>
                    <option value="Country">Country</option>
                    <option value="phoneNumber">Number</option>
                </select>

                <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search" name="searchText">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
</header>
<div class="content" style="margin-top: 5%;">
    <div class="container settings">
        <div class="row">
            <div class="col-md-12 setting_div">
                <h3 style="text-align: center">Edit Journal</h3>
                {{#if updateError}}
                <p class="error">Error occur while updating your Profile</p>
                {{/if}}
                <form method="post" action="/updateJournal/{{tripType}}/{{itemID}}">
                    <div class="form-group">
                        <label for="name">Title</label>
                        <input type="text" class="form-control" id="title" name="title" aria-describedby="emailHelp" value={{ Data.Title }}>

                    </div>

                    <div class="form-group">
                        <label for="email">Description</label>
                        <textarea type="text" name="Description" class="form-control" cols="60" rows="5">{{ Data.Description }}</textarea>
                    </div>

                    <!--<div class="form-group">-->
                        <!--<label for="exampleFormControlSelect2">Select type</label>-->
                        <!--<select class="form-control" id="exampleFormControlSelect2">-->
                            <!--<option>Within City Trips</option>-->
                            <!--<option>Out of City Trips</option>-->
                            <!--<option>Out of State Trips</option>-->
                        <!--</select>-->
                    <!--</div>-->

                    <div class="form-group">
                        <label for="filevalue">Add Picture or Video</label>
                        <input type="file" class="btn" id="image" name="image" accept="image/*,video/*">
                    </div>


                    <button type="submit" class="btn btn-color">Update Profile</button>
                </form>

            </div>
        </div>

    </div>


</div>



