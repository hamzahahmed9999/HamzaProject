<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="#" style="color: white">Smart Travel</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active" style="margin-right: 10%;">
                    <a class="nav-link" href="/" style="color: white !important;">Home <span class="sr-only">(current)</span></a>
                </li>

                <li class="nav-item dropdown" style="color: white">
                    <button class="btn" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{ session.userName }}
                    </button>

                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="/settings">Settings</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/getWishList">Wish List</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/logOut">Log Out</a>
                    </div>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0"  method="post" action="/searchProfiles">
                <select data-trigger="" name="searchType" style="border-radius: .25rem;padding: 1%">
                    <option value="Name">Name</option>
                    <option value="Age">Age</option>
                    <option value="City">City</option>
                    <option value="Country">Country</option>
                    <option value="phoneNumber">Number</option>
                </select>

                <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search" name="searchText">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
</header>
<div class="content" style="margin-top: 5%;">
    <div class="container settings">
        <div class="row">
            <div class="col-md-12 setting_div">
                <h3 style="text-align: center">Settings</h3>
                {{#if updateError}}
                <p class="error">Error occur while updating your Profile</p>
                {{/if}}
                <form method="post" action="/editProfile">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" name="name" value={{ Data.username }} aria-describedby="emailHelp">
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email"  value={{ Data.email }}>
                    </div>

                    <div class="form-group">
                        <label for="number">Phone number</label>
                        <input type="text" class="form-control" id="number" name="number" value={{ Data.phoneNumber }}>
                    </div>

                    <div class="form-group">
                        <label for="age">Age</label>
                        <input type="number" class="form-control" id="age" name="age" value={{ Data.age }}>
                    </div>


                    <div class="form-group">
                        <label for="city">Place you live</label>
                        <input type="text" class="form-control" id="city" name="city" value={{ Data.city }}>
                    </div>

                    <div class="form-group">
                        <label for="Country">Country</label>
                        <input type="text" class="form-control" id="Country" name="country" value={{ Data.country }}>
                    </div>

                    <button type="submit" class="btn btn-color">Update Profile</button>
                </form>


            </div>
        </div>
        <div class="row">
            <div class="col-md-12 Cpassword">
                <h3>Change Password</h3>
                <form>
                    <div class="form-group">
                        <label for="old_password">Old Password</label>
                        <input type="password" class="form-control" id="old_password" aria-describedby="old password" placeholder="Enter email">

                    </div>
                    <div class="form-group">
                        <label for="new_password">New Password</label>
                        <input type="password" class="form-control" id="new_password" placeholder="Password">
                    </div>

                    <div class="form-group">
                        <label for="Rnew_password">Repeat New Password</label>
                        <input type="password" class="form-control" id="Rnew_password" placeholder="Password">
                    </div>

                    <button type="submit" class="btn btn-color">Change Password</button>
                </form>
            </div>
        </div>

    </div>


</div>

